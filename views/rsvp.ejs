<% include partials/header %>
<div id='rsvpPage'>
    <h2>Please enter your information below to RSVP to the Wedding!</h2>
    <button id='add-person' type='button'><i class='far fa-user-circle'></i>&nbsp;&nbsp;Click me to add additional guests!</button>
    <div>
        <form id='guest-list' action='/rsvp' method='POST'>
            <i class="far fa-times-circle delete-button"></i>
            <div class='form-group'>
                <input id='firstname' type='text' name='firstname0' placeholder='First Name' required>
                <span class='box-break'>|</span>
                <input id='lastname' type='text' name='lastname0' placeholder='Last Name' required>
                <span class='box-break'>|</span>
                <input id='email' type='text' name='email0' placeholder='Email'>
            </div>  
            <section id='button-group'>
                <button id='sendRSVP' class='submit-button' type='submit' >SEND RSVP</button>
                <button id='declineRSVP' class='submit-button' type='submit' >DECLINE RSVP</button>
            </section>
        </form>
    </div>
</div>

<% include partials/footer %>